{
  "name": "nthing",
  "version": "1.3.0",
  "description": "A distraction-free markdown editor",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder --win",
    "build:portable": "electron-builder --win portable",
    "dist": "electron-builder",
    "release:patch": "npm version patch && npm run build",
    "release:minor": "npm version minor && npm run build",
    "release:major": "npm version major && npm run build"
  },
  "keywords": [
    "markdown",
    "editor",
    "electron",
    "writing",
    "notes"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@codemirror/lang-markdown": "^6.2.4",
    "@codemirror/state": "^6.4.0",
    "@codemirror/view": "^6.23.0",
    "marked": "^11.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.nthing.app",
    "productName": "Nthing",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/Nthing.ico",
      "fileAssociations": [
        {
          "ext": "md",
          "name": "Markdown File",
          "description": "Markdown Document",
          "role": "Editor",
          "icon": "build/icon.ico"
        },
        {
          "ext": "markdown",
          "name": "Markdown File",
          "description": "Markdown Document",
          "role": "Editor",
          "icon": "build/icon.ico"
        },
        {
          "ext": "txt",
          "name": "Text File",
          "description": "Plain Text Document",
          "role": "Editor",
          "icon": "build/icon.ico"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": true,
      "perMachine": false,
      "include": "installer.nsh"
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!.git",
      "!.gitignore",
      "!dist",
      "!build"
    ],
    "directories": {
      "output": "dist"
    }
  }
}
