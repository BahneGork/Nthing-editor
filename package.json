{
  "name": "markdown-editor",
  "version": "1.0.0",
  "description": "A desktop markdown editor with live preview",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder --win",
    "build:portable": "electron-builder --win portable",
    "dist": "electron-builder"
  },
  "keywords": ["markdown", "editor", "electron"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@codemirror/lang-markdown": "^6.2.4",
    "@codemirror/state": "^6.4.0",
    "@codemirror/view": "^6.23.0",
    "marked": "^11.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.markdowneditor.app",
    "productName": "Markdown Editor",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!.git",
      "!.gitignore",
      "!dist",
      "!build"
    ],
    "directories": {
      "output": "dist"
    }
  }
}
